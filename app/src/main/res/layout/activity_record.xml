<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundart"
    tools:context=".record">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".07"
        app:layout_constraintWidth_percent=".14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:src="@drawable/ic_launcher"
        android:contentDescription="Back arrow"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="きみのランク"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:background="@drawable/kanban"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".05"
        app:layout_constraintWidth_percent=".55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintHorizontal_bias="0.5"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bronzetrophy"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".75"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/woodenboard"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".48"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ノーマルモード"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintLeft_toLeftOf="@id/image3"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="0.29"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/buttonR"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/buttonimage1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".05"
        app:layout_constraintWidth_percent=".075"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image"
        app:layout_constraintLeft_toRightOf="@id/text1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias=".83"
        app:layout_constraintHorizontal_bias="0.4"/>

    <ImageView
        android:id="@+id/buttonL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/buttonimage2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".05"
        app:layout_constraintWidth_percent=".075"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text1"
        app:layout_constraintVertical_bias=".83"
        app:layout_constraintHorizontal_bias="0.6"/>
    <!-- 固定の順位表示用のTextView -->
    <ImageView
        android:id="@+id/rank1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/firstplace"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintLeft_toLeftOf="@id/image3"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="0.47"
        app:layout_constraintHorizontal_bias="0.28"/>

    <ImageView
        android:id="@+id/rank2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/secondplace"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".09"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintLeft_toLeftOf="@id/image3"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.28"/>

    <ImageView
        android:id="@+id/rank3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/thirdplace"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".07"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintLeft_toLeftOf="@id/image3"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.28"/>

    <!-- スコア表示用のTextView -->
    <TextView
        android:id="@+id/score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintLeft_toRightOf="@id/rank1"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="0.47"
        app:layout_constraintHorizontal_bias="0.3" />

    <TextView
        android:id="@+id/score1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/score1"
        app:layout_constraintLeft_toRightOf="@id/rank1"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.6" />

    <TextView
        android:id="@+id/score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintLeft_toRightOf="@id/rank2"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.3" />

    <TextView
        android:id="@+id/score2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/score2"
        app:layout_constraintLeft_toRightOf="@id/rank2"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.6" />

    <TextView
        android:id="@+id/score3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintLeft_toRightOf="@id/rank3"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.3" />

    <TextView
        android:id="@+id/score3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".095"
        app:layout_constraintWidth_percent=".19"
        app:layout_constraintTop_toTopOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="@id/score3"
        app:layout_constraintLeft_toRightOf="@id/rank3"
        app:layout_constraintRight_toRightOf="@id/image3"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>
